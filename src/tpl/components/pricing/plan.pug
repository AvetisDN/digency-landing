.col.pricing-plan
    .shadow-sm.text-center.py-5.d-flex.flex-column.align-items-center.h-100
        h4 #{plan.title}
        .pricing-plan__icon.my-5
            i(class="icofont icofont-" + plan.icon)
        .pricing-plan__price
            span.text-primary.fs-2.fw-medium $#{plan.price.mothly}
            span.text-dark /Month
        .my-3.flex-grow-1
            each feature in plan.features
                p #{feature}
        a.btn.btn-primary.rounded-pill(href='#') Start Now