                        each post in blogPosts
                            .glide__slide
                                .blog-post.mx-3.border.border-primary.py-5.px-4
                                    h6.text-dark.fs-5 #{post.title}
                                    p.post-date.text-primary Posted: #{post.date}
                                    p #{post.body}
                                    a.btn.bg-transparent.px-0.text-primary
                                        span Read More
                                        i.icofont.icofont-arrow-right.ms-2
                .d-flex.justify-content-center.mt-3(data-glide-el="controls")
                    button.btn.btn-secondary.rounded-circle.portfolio-btn(data-glide-dir="<")
                        i.icofont.icofont-rounded-left
                    button.btn.btn-secondary.rounded-circle.portfolio-btn(data-glide-dir=">")
